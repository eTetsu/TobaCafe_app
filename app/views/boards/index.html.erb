<div class="container py-5">
  <div class="row mb-4 align-items-center">
    <div class="col-md-6">
      <h1 class="mb-3"><%= t('.title') %></h1>
    </div>
    <div class="col-md-6 text-md-end">
      <%= link_to new_board_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-circle me-1"></i><%= t('.new_board') %>
      <% end %>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-12">
      <form action="#" method="get">
        <div class="input-group">
          <input type="text" name="q" class="form-control" placeholder="カフェ名や駅名で検索">
          <button type="submit" class="btn btn-outline-secondary">
            <i class="bi bi-search me-1"></i>検索
          </button>
        </div>
      </form>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-12">
      <p class="text-muted"><%= t('.board_count_info', count: @boards.count) %></p>
    </div>
  </div>

  <div class="row g-4">
    <% if @boards.present? %>
      <%= render partial: 'board', collection: @boards %>
    <% else %>
      <div class="col-12">
        <div class="alert alert-info"><%= t('.no_boards') %></div>
      </div>
    <% end %>
  </div>
  
  <%= paginate @boards, theme: 'bootstrap-5' %>
</div>
