<div class="container py-5">
  <div class="row">
    <div class="col-md-6">
      <h1 style="text-align:center"><%= t('.page_name') %></h1>
    </div>
    <div class="col-lg-8 mx-auto">
      <div class="card mb-4">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start mb-3">
            <h5 class="card-title mb-0">
              <%= link_to @board.title, board_path(@board), class: "text-decoration-none" %>
            </h5>
            <% if current_user&.own?(@board) %>
              <div class="d-flex gap-1">
                <%= link_to edit_board_path(@board), class: "btn btn-sm btn-outline-secondary" do %>
                  <i class="bi bi-pencil"></i><%= t('defaults.edit') %>
                <% end %>
                <%= link_to board_path(@board), data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') }, class: "btn btn-sm btn-outline-danger" do %>
                  <i class="bi bi-trash"></i><%= t('defaults.delete') %>
                <% end %>
              </div>
            <% end %>
          </div>

          <small class="text-muted d-block mb-3">
            <%= t('.poster') %>: <%= @board.user.nickname %>
          </small>

          <ul class="list-unstyled mb-3">
            <li class="mb-2">
              <strong><%= t('.address') %>:</strong> <%= @board.address %>
            </li>
            <li class="mb-2">
              <strong><%= t('.nearest_station') %>:</strong> <%= @board.nearest_station %>
            </li>
            <li class="mb-2">
              <strong><%= t('.opening_hours') %>:</strong> <%= @board.opening_hours.presence || "未設定" %>
            </li>
            <li class="mb-2">
              <strong><%= t('.smoking') %>:</strong> 
              <span class="badge bg-secondary">
                <%= @board.smoking_policy_i18n %>
              </span>
            </li>
          </ul>

        <% if false %>
          <!-- ブックマークボタン --
          <div class="mb-3">
            <%= render 'bookmarks/bookmark_button', board: @board %>
          </div>
          -->
        <% end %>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-lg-8 mx-auto">
          <h4 class="mb-3"><%= "レビュー" %></h4>
          <% if current_user %>
            <% if @review.persisted? %>
              <div class="card mb-4">
                <div class="card-body">
                  <h5 class="card-title">あなたのレビュー</h5>
                  <%= render 'reviews/review', review: @review %>
                </div>
              </div>
            <% else %>
              <%= render 'reviews/form', board: @board, review: @review %>
            <% end %>
          <% end %>

          <div id="reviews-list" class="mt-4">
            <%= render @reviews %>
          </div>
        </div>
      </div>

      <div class="mt-4">
        <%= link_to boards_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left me-1"></i>一覧に戻る
        <% end %>
      </div>
    </div>
  </div>
</div>
